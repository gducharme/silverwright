<%= form_with(model: target, local: true) do |form| %>
  <% if target.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(target.errors.count, "error") %> prohibited this target from being saved:</h2>

      <ul>
        <% target.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :file %>
    <%= target.file.blob.filename %>
    <%= form.file_field :file %>
    <%= image_tag polymorphic_url(target.file) %>
  </div>

  <div class="field">
    <%= form.label :label %>
    <%= form.text_field :label, :autofocus => true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
